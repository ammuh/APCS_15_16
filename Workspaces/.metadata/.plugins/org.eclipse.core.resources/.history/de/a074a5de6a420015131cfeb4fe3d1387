import gpdraw.*;

public class Benzene {
	private DrawingTool marker;
	private SketchPad poster;
	
	public Benzene(){
		poster = new SketchPad(500, 500);
		marker = new DrawingTool(poster);
	}
	
	public void draw(){
		marker.drawCircle(50);
		marker.up();
		marker.move(-(75*Math.sqrt(3)),-75);
		marker.down();
		for (int i=1; i<7 ; i++) {
			marker.setDirection(90);
			marker.forward(150);
			marker.turnRight(60);
		}
	}
}
